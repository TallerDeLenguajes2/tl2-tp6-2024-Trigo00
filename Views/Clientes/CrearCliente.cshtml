@model Cliente

<h2>Crear Nuevo Cliente</h2>

<form asp-action="CrearCliente" method="post">
    @Html.AntiForgeryToken() <!-- Debo agregar esto para que el token sea enviado y validado correctamente en cada solicitud POST. -->
    <div class="form-group">
        <label asp-for="Nombre">Nombre</label>
        <input asp-for="Nombre" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" type="email" required />
    </div>
    <div class="form-group">
        <label asp-for="Telefono">Telefono</label>
        <input asp-for="Telefono" class="form-control" type="tel" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Crear Cliente</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>