@model List<Presupuesto>

<h2>Listado de Presupuestos</h2>

<a asp-controller="Presupuestos" asp-action="CrearPresupuesto" class="btn btn-primary mb-3">Crear Nuevo Presupuesto</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Id Presupuesto</th>
            <th>Nombre Destinatario</th>
            <th>Fecha</th>
            <th>Id Producto</th>
            <th>Descripci√≥n</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var presupuesto in Model)
        {
            <tr>
                <td>@presupuesto.IdPresupuesto</td>
                <td>@presupuesto.NombreDestinatario</td>
                <td>@presupuesto.FechaCreacion</td>
                @foreach (var detalle in presupuesto.Detalle)
                {
                    <td>@detalle.Producto.IdProducto</td>
                    <td>@detalle.Producto.Descripcion</td>
                    <td>$ @detalle.Producto.Precio</td>
                    <td>@detalle.Cantidad</td>
                }
                <td>
                    <a asp-asp-controller="Presupuestos" asp-action="ModificarPresupuesto" method="get" asp-route-id="@presupuesto.IdPresupuesto"
                        class="btn btn-warning btn-sm">Modificar</a>
                    <a asp-controller="Presupuestos" asp-action="EliminarPresupuesto" method="get" asp-route-id="@presupuesto.IdPresupuesto"
                        class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>