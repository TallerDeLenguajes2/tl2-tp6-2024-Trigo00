@model ModificarPresupuestoViewModel

<h2>Modificar Presupuesto</h2>

<form asp-action="ModificarPresupuesto" method="post" class="container mt-4 p-4 border rounded bg-light">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Presupuesto.IdPresupuesto" />

    <div class="form-group mb-2">
        <label asp-for="Presupuesto.IdPresupuesto">Id Presupuesto</label>
        <input asp-for="Presupuesto.IdPresupuesto" class="form-control" disabled />
    </div>

    <div class="form-group mb-2">
        <label for="ClienteIdSeleccionado" class="form-label">Seleccione Cliente:</label>
        <input type="hidden" asp-for="Presupuesto.Cliente.Id" />
        <select asp-for="ClienteIdSeleccionado" asp-items="@(new SelectList(Model.Clientes, "Id", "Nombre", Model.ClienteIdSeleccionado))" class="form-select">
            <option value="0">Seleccione un cliente</option>
        </select>
    </div>

    <div class="form-group mb-2">
        <label asp-for="Presupuesto.FechaCreacion">Fecha de Creaci√≥n</label>
        <input asp-for="Presupuesto.FechaCreacion" class="form-control" type="date" disabled />
    </div>

    <h3 class="mt-3 mb-3">Detalles del Presupuesto</h3>
    <div id="detallesPresupuesto">
        @for (int i = 0; i < Model.Presupuesto.Detalle.Count; i++)
        {
            <div class="product-card mb-3 p-3 border rounded">
                <h5 class="product-title mt-2 mb-2">Producto: @Model.Presupuesto.Detalle[i].Producto.Descripcion</h5>
                <div class="form-group">
                    <label asp-for="Presupuesto.Detalle[i].Cantidad">Cantidad</label>
                    <input asp-for="Presupuesto.Detalle[i].Cantidad" class="form-control" type="number" required />
                </div>
                <div class="form-group">
                    <label asp-for="Presupuesto.Detalle[i].Producto.Precio">Precio</label>
                    <input asp-for="Presupuesto.Detalle[i].Producto.Precio" class="form-control" type="text" disabled />
                </div>
                <input type="hidden" asp-for="Presupuesto.Detalle[i].Producto.IdProducto" />
            </div>
        }
    </div>

    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
