@model Producto

<h2>Modificar Producto</h2>

<form asp-action="ModificarProducto" method="post">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="IdProducto" />
    <div class="form-group">
        <label asp-for="Descripcion">Descripci√≥n</label>
        <input asp-for="Descripcion" class="form-control" required />
    </div>
    <div class="form-group">
        <label asp-for="Precio">Precio</label>
        <input asp-for="Precio" class="form-control" type="number" required />
    </div>
    <div class="mt-3">
        <button type="submit" class="btn btn-primary">Guardar Cambios</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>