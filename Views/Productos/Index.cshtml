@model List<Producto>

<h2>Listado de Productos</h2>

@if((bool)ViewData["Admin"])
{
<a asp-controller="Productos" asp-action="CrearProducto" class="btn btn-primary mb-3">
    <i class="fas fa-plus"></i> Crear Nuevo Producto
</a>
}

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Descripción</th>
            <th>Precio</th>
            @if((bool)ViewData["Admin"])
            {
            <th>Acciones</th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.IdProducto</td>
                <td>@producto.Descripcion</td>
                <td>$ @producto.Precio</td>
                <td>
                    @if((bool)ViewData["Admin"])
                    {
                    <a asp-controller="Productos" asp-action="ModificarProducto" method="get" asp-route-id="@producto.IdProducto"
                        class="btn btn-warning btn-sm ms-1"><i class="fas fa-edit"></i> Modificar</a>
                    <a asp-controller="Productos" asp-action="EliminarProducto" method="get" asp-route-id="@producto.IdProducto"
                        class="btn btn-danger btn-sm ms-1"><i class="fas fa-trash"></i> Eliminar</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>